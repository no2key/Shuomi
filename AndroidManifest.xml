<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.android.shuomi"
      android:versionCode="2"
      android:versionName="1.01">
    <uses-sdk android:minSdkVersion="8" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"></uses-permission> 
    <uses-permission android:name="android.permission.WRITE_APN_SETTINGS"></uses-permission>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"></uses-permission>
    
    <application 
        android:icon="@drawable/logo_shuomi"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar">
        
        <uses-library android:name="com.google.android.maps" />
        
        <service android:enabled="true"
                 android:name=".network.NetworkService"
                 android:exported="false">
        </service>
        
        <activity 
        	android:name=".ServiceListView"
            android:label="@string/app_name"
            android:launchMode="singleInstance"  
        	android:stateNotNeeded="true"  
        	android:screenOrientation="portrait">
                  
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
            <intent-filter>
                <action android:name="com.android.shuomi.HTTP_RESPONSE_GROUPON" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            
            <intent-filter>
                <action android:name="com.android.shuomi.HTTP_RESPONSE_GROUPON_SHARE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            
            <intent-filter>
                <action android:name="com.android.shuomi.HTTP_RESPONSE_GROUPON_FAVORITE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            
            <intent-filter>
                <action android:name="com.android.shuomi.HTTP_RESPONSE_WEATHER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            
            <intent-filter>
                <action android:name="com.android.shuomi.HTTP_RESPONSE_EXPRESS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            
            <intent-filter>
                <action android:name="com.android.shuomi.HTTP_RESPONSE_AROUND" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="weiboandroidsdk" android:host="AuthorizationDone" /> 
            </intent-filter>

        </activity>
        
        <activity android:theme="@style/ContentOverlay"
            android:launchMode="singleTask"
            android:configChanges="keyboardHidden|orientation"                           
            android:windowSoftInputMode="adjustPan|stateAlwaysVisible" android:name="com.weibo.net.ShareActivity">
        </activity>

    </application>
    
</manifest>